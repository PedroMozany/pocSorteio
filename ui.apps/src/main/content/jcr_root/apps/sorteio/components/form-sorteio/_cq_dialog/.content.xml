<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Form Sorteio"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <items jcr:primaryType="nt:unstructured">
         <tabs jcr:primaryType="nt:unstructured"
               sling:resourceType="granite/ui/components/coral/foundation/tabs">
            <items jcr:primaryType="nt:unstructured">
               <tab-1 jcr:primaryType="nt:unstructured"
                      jcr:title="Inputs"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <titleText cq-msm-lockable="./titleText"
                                      fieldLabel="Digite o título do formulário"
                                      jcr:primaryType="nt:unstructured"
                                      name="./titleText"
                                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <namePlaceholderText cq-msm-lockable="./namePlaceholderText"
                                                fieldLabel="Digite o placeholder do input"
                                                jcr:primaryType="nt:unstructured"
                                                name="./namePlaceholderText"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <nameLabelText cq-msm-lockable="./nameLabelText"
                                          fieldLabel="Digite a label do input"
                                          jcr:primaryType="nt:unstructured"
                                          name="./nameLabelText"
                                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <placeholderEmailText cq-msm-lockable="./placeholderEmailText"
                                                 fieldLabel="Digite o texto do placeholder do campo de email"
                                                 jcr:primaryType="nt:unstructured"
                                                 name="./placeholderEmailText"
                                                 sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                           <labelEmailText cq-msm-lockable="./labelEmailText"
                                           fieldLabel="Digite o texto do label do campo de email"
                                           jcr:primaryType="nt:unstructured"
                                           name="./labelEmailText"
                                           sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </tab-1>
               <tab-2 jcr:primaryType="nt:unstructured"
                      jcr:title="Button"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                  <layout jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"/>
                  <items jcr:primaryType="nt:unstructured">
                     <column jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                           <buttonText cq-msm-lockable="./buttonText"
                                       fieldLabel="Digite o texto do botão"
                                       jcr:primaryType="nt:unstructured"
                                       name="./buttonText"
                                       sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        </items>
                     </column>
                  </items>
               </tab-2>
            </items>
         </tabs>
      </items>
   </content>
</jcr:root>
